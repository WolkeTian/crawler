# http://www.heibanke.com/lesson/crawler_ex00/ The first crawler hurdle.

baseUrl = 'http://www.heibanke.com/lesson/crawler_ex00/'
import re
import urllib
def getNum(url):
    page = urllib.urlopen(url)
    html = page.read()
    reg = r'\d{5}'
    num = re.findall(reg, html)
    return num
url = baseUrl    
for i in range(200):
    num = getNum(url)
    if len(num)==4:
        url = baseUrl+num[1]
        print ('running',i)
        print (url)
    else:
        print ('Done',',the right answer is',url)
        break
